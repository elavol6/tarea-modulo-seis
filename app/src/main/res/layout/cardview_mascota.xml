<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvContacto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#eeeeee"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cat"
            android:background="@color/brownLight"
            />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
            android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_rating"
            android:background="#00FFFFFF"
            android:layout_gravity="left"/>

        <TextView
            android:id="@+id/tvNombreCV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/pnombre"
            android:textSize="@dimen/cv_nombre_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/cv_margin"
            android:layout_gravity="start"

            />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvRatingCV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:gravity="center"
            android:textSize="@dimen/cv_nombre_size"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/cv_margin"

            />

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_bone_rating"
            android:background="#00FFFFFF"
            android:layout_gravity="right|end"
            />
    </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>